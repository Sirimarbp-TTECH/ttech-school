<button id="topBtn" onclick="goTop()">⬆️</button>

<style>
#topBtn {
  position: fixed;
  bottom: 30px;
  right: 30px;
  background: #0d47a1;
  color: white;
  border: none;
  padding: 12px 16px;
  border-radius: 50%;
  font-size: 18px;
  cursor: pointer;
  display: none;
  box-shadow: 0 4px 8px rgba(0,0,0,0.3);
}
#topBtn:hover {
  background: #1565c0;
}
</style>

<script>
window.onscroll = function() {
  document.getElementById("topBtn").style.display =
    (document.documentElement.scrollTop > 300) ? "block" : "none";
};

function goTop() {
  window.scrollTo({ top: 0, behavior: 'smooth' });
}
</script>

body { background: var(--soft-yellow); }
